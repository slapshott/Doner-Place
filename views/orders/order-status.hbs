{{#if orders}}
<h1>Your orders</h1>
<div class="orders">
    {{#each orders}}
    <div class="order">     
        <span class="order-time">{{moment date=d format="DD/MM/YYYY"}}</span>
        <span class="order-name">{{this.product}} doner, {{this.size}} cm</span>
        <span class="order-status">{{this.status}}</span>
        <a href="/order-details/{{this._id}}" class="button order-button">Details</a> 
    </div>
    {{/each}}
</div>
{{else}}
<div class="no-orders">No orders</div>
{{/if}}
 
